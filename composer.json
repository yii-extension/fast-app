{
    "name": "yii-extension/simple-app",
    "type": "library",
    "description": "Simple web application for Yii3.",
    "keywords": [
        "yii",
        "simple",
        "app"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "nyholm/psr7": "^1.3.0",
        "yiisoft/config": "^1.0@dev",
        "yiisoft/csrf": "^1.0@dev",
        "yiisoft/data-response": "^3.0@dev",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/error-handler": "^3.0@dev",
        "yiisoft/event-dispatcher": "^1.0",
        "yiisoft/i18n": "^1.0.0",
        "yiisoft/log": "^1.0.0",
        "yiisoft/log-target-file": "^1.0.0",
        "yiisoft/router-fastroute": "^3.0@dev",
        "yiisoft/session": "^1.0.1",
        "yiisoft/yii-console": "^3.0@dev",
        "yiisoft/yii-web": "^3.0@dev"
    },
    "require-dev": {
        "codeception/codeception": "^4.1.20",
        "codeception/c3": "^2.6.0",
        "roave/infection-static-analysis-plugin": "^1.7",
        "vimeo/psalm": "^4.7",
        "codeception/module-phpbrowser": "^1.0.2",
        "codeception/module-asserts": "^1.3.1"
    },
    "autoload": {
        "psr-4": {
            "Simple\\App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simple\\App\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin-options": {
            "silent-override": true,
            "force-check": true
        },
        "config-plugin": {
            "common": "config/common/*.php",
            "params": "config/params.php",
            "web": [
                "$common",
                "config/web/*.php"
            ],
            "console": [
                "$common",
                "config/console/*.php"
            ],
            "routes": "config/routes.php"
        },
        "installer-types": [
            "npm-asset"
        ],
        "installer-paths": {
            "./node_modules/{$name}": [
                "type:npm-asset"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
